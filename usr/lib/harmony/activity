#!/bin/bash
# Get infos from the current loaded activity

[ -n "$userspace" ] || exit 1


activity.name(){
    cat "$userspace/activity.name" 2> /dev/null   
}

activity.desc(){
    cat "$userspace/activity.desc" 2> /dev/null 
}

activity.icon(){
    cat "$userspace/activity.icon" 2> /dev/null 
}

activity.pid(){
    cat "$userspace/activity.pid" 2> /dev/null
}
