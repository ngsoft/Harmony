<?xml version="1.0" encoding="UTF-8"?>
<!-- This file contains the mapping of LIRC keys to XBMC keys used in Keymap.xml  -->
<!--                                                                              -->
<!-- How to add remotes                                                           -->
<!-- <remote device="name_Lirc_calls_the_remote">                                 -->
<!--                                                                              -->
<!-- For the commands the layout following layout is used                         -->
<!-- <XBMC_COMMAND>LircButtonName</XBMC_COMMAND>                                  -->
<!--                                                                              -->
<!-- For a list of XBMC_COMMAND's check out the <remote> sections of keymap.xml   -->

<lircmap>
	<remote device="FLIRC">
        <queueplus>queue+</queueplus>
        <queueminus>queue-</queueminus>
        <left>left</left>
        <right>right</right>
        <up>up</up>
        <down>down</down>
        <select>ok</select>
        <back>back</back>
        <record>rec</record>
        <play>play</play>
        <pause>pause</pause>
        <stop>stop</stop>
        <forward>fast+</forward>
        <reverse>fast-</reverse>
        <volumeplus>vol+</volumeplus>
        <volumeminus>vol-</volumeminus>
        <pageplus>ch+</pageplus>
        <pageminus>ch-</pageminus>
        <skipplus>next</skipplus>
        <skipminus>prev</skipminus>
        <t>subtitles</t>
        <title>guide</title>
        <info>info</info>
        <display>fullscreen</display>
        <mute>mute</mute>
        <power>exit</power>
        <myvideo>videos</myvideo>
        <livetv>livetv</livetv>
        <mytv>series</mytv>
        <one>1</one>
        <two>2</two>
        <three>3</three>
        <four>4</four>
        <five>5</five>
        <six>6</six>
        <seven>7</seven>
        <eight>8</eight>
        <nine>9</nine>
        <zero>0</zero>
        <star>queue</star>
        <hash>settings</hash>
        <red>red</red>
        <green>green</green>
        <yellow>yellow</yellow>
        <blue>blue</blue>
        <menu>menu</menu>
        <fav>fav</fav>
    </remote>
</lircmap>
