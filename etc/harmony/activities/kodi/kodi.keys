#!/bin/bash
# Receive keys as first argument,
# Usefull for apps that don't support LIRC
# or to create macros with xdotool


# Blocks all keys except for the F[n] and exit keys that can pass trough
case "$1" in
    EXIT)
        exit 1
    ;;
    F1|F2|F3|F4|F5|F6|F7|F8|F9|F10|F11|F12)
        exit 1
    ;;
    F13|F14|F15|F16|F17|F18|F19|F20|F21|F22|F23|F24)
        exit 1
    ;;

    *)
        exit 0
    ;;
esac
