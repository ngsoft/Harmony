#!/bin/bash
# Receive all the inputs from LIRC
# and performs custom action for each keystroke

. utils

for file in main.keys.d/*.keys; do
    [ -r $file ] && . $file
done

case "$1" in
    RED)
        harmony start clementine
    ;;
    
    GREEN)
        
    ;;
    YELLOW)
        harmony start vlc
    ;;
    BLUE)
        harmony start kodi
    ;;
    *)
        exit 1
    ;;
esac
